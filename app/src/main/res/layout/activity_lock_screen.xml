<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LockScreenActivity">


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One"
        android:id="@+id/Frag_btn1"
        android:layout_toStartOf="@+id/textClock"
        android:onClick="selectFrag"
        android:layout_below="@+id/Configbtn"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two"
        android:id="@+id/Frag_btn2"
        android:onClick="selectFrag"
        android:layout_alignTop="@+id/Frag_btn1"
        android:layout_toStartOf="@+id/Configbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure"
        android:id="@+id/Configbtn"
        android:layout_alignTop="@+id/textClock"
        android:layout_alignParentEnd="true" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="example.Android.issuxark11.simplelockscreen.FragmentOne"
        android:id="@+id/fragment_main"
        android:layout_below="@+id/Frag_btn1"
        android:layout_alignParentStart="true" />

</RelativeLayout>