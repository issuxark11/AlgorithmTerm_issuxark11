<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LockScreenActivity">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityText"
        android:layout_below="@+id/textClock"
        />

    <TextView
        android:id="@+id/weatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherIcon"
        android:layout_alignParentLeft="@id/weatherIcon" />

    <TextView
        android:id="@+id/temp"
        style="@style/tempStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignBaseline="@id/weatherCondition"
        android:layout_toRightOf="@id/weatherCondition"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure"
        android:id="@+id/Configbtn"
        android:layout_below="@+id/textClock"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="example.Android.issuxark11.simplelockscreen.FragmentOne"
        android:id="@+id/fragment_main"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Configbtn"
        android:layout_above="@+id/SetPosImg"/>

    <ImageView
        android:id="@+id/SetPosImg"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:src="@drawable/rabbit_1" />


</RelativeLayout>